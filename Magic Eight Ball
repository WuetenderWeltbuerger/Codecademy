var playerName = String ("Boaty McBoatface")
var playerQuestion = String ("Will the UK government let me keep my name?")
let randomNumber = Int.random(in: 1...9)
let eightBall: String

switch randomNumber {
  case 1:
    eightBall = "Yes - definitely"
  case 2:
    eightBall = "It is decidedly so"
  case 3:
    eightBall = "Without a doubt"
  case 4:
    eightBall = "Reply hazy, try again"
  case 5:
    eightBall = "Ask again later"
  case 6:
    eightBall = "Better not tell you now"
  case 7:
    eightBall = "My sources say no"
  case 8:
    eightBall = "Outlook not so good"
  case 9:
    eightBall = "Very doubtful"
  default:
    eightBall = "Error"

}

if playerName == ""{
  print("Question: \(playerQuestion)")
}else{
  print("\(playerName)'s Question: \(playerQuestion)'")
}
  if playerQuestion == "Will I win the Lottery?"{
    print("Magic Eight Ball's answer: Not Fucking likely Bud.")
  }else{  
   print("Magic Eight Ball's answer: \(eightBall)")
  }
